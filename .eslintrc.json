{
  "extends": [
    "@rocketseat/eslint-config/react",
    "next/core-web-vitals",
    "prettier"
  ],
  "plugins": ["import", "react-hooks"],
  "rules": {
    "camelcase": "off",
    "react-hooks/rules-of-hooks": "error", // Verifica as regras dos Hooks
    "react-hooks/exhaustive-deps": "warn", // Verifica as dependÃªncias de efeitos
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index"
        ],
        "newlines-between": "always"
      }
    ],
    "import/first": "error",
    "import/newline-after-import": "error",
    "import/no-duplicates": "error",
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": false
      }
    ]
  }
}
